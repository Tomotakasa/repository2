rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // ─── Group item images ───────────────────────────────────────────
    // Images are stored under groups/{groupId}/items/{filename}
    // Access is granted to authenticated users only.
    // Deeper access control (group membership) is enforced on the
    // Firestore side (the imageUrl is only stored in a group's item doc,
    // which is itself protected by Firestore rules).
    match /groups/{groupId}/items/{imageFile} {
      // Read: any authenticated user (URLs are not guessable)
      allow read: if request.auth != null;

      // Write: authenticated users with reasonable file size and type limits
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024   // 5 MB max
                   && request.resource.contentType.matches('image/.*');

      // Delete: authenticated users (the app deletes on item delete)
      allow delete: if request.auth != null;
    }

    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
